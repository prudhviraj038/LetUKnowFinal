<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/aaaaaa"
    android:background="#EAEAEA">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_for_news_item"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bbbbbbb"
            android:padding="2dp"
            android:layout_marginBottom="10dp">

            <in.yellowsoft.LetUKnow.MyTextView1
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="News News News"
                android:id="@+id/news_title_ad"
                android:textColor="#000000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <view
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    class="in.yellowsoft.LetUKnow.SquareImageview"
                    android:id="@+id/view2"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/view2"
                    android:layout_alignBottom="@+id/view2"
                    android:layout_alignRight="@+id/view2"
                    android:layout_alignLeft="@+id/view2">

                    <pl.droidsonroids.gif.GifImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:id="@+id/ad_gif"
                        android:visibility="gone"
                        android:scaleType="fitCenter" />

                    <in.yellowsoft.LetUKnow.SquareImageview
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:id="@+id/news_img_ad"
                        android:src="@drawable/nwessss"
                        android:scaleType="fitCenter" />

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:id="@+id/video_hint_ad"
                        android:layout_centerInParent="true"
                        android:src="@drawable/video" />

                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>